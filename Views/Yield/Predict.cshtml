@model YieldInput
@{
    ViewData["Title"] = "Predict Crop Yield";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">

    <!-- Page Title -->
    <div class="text-center mb-4">
        <h1 class="fw-bold">Crop Yield Prediction</h1>
        <p class="text-muted fs-5">Provide your farm details to estimate expected yield.</p>
    </div>

    <!-- Prediction Form Card -->
    <div class="card shadow-lg p-4 rounded-4">

        <form asp-action="Predict" method="post">

            <div class="row g-4">

                <!-- Region -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Region</label>
                    <select asp-for="Region" class="form-select">
                        <option value="North">North</option>
                        <option value="South">South</option>
                        <option value="East">East</option>
                        <option value="West">West</option>
                    </select>
                </div>

                <!-- Soil Type -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Soil Type</label>
                    <select asp-for="Soil_Type" class="form-select">
                        <option>Clay</option>
                        <option>Sandy</option>
                        <option>Loam</option>
                        <option>Silt</option>
                        <option>Peaty</option>
                        <option>Chalky</option>
                    </select>
                </div>

                <!-- Crop -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Crop</label>
                    <select asp-for="Crop" class="form-select">
                        <option>Wheat</option>
                        <option>Rice</option>
                        <option>Maize</option>
                        <option>Barley</option>
                        <option>Soybean</option>
                        <option>Cotton</option>
                    </select>
                </div>

                <!-- Rainfall -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Rainfall (mm)</label>
                    <input asp-for="Rainfall_mm" class="form-control" type="number" placeholder="Enter rainfall amount" />
                </div>

                <!-- Temperature -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Temperature (°C)</label>
                    <input asp-for="Temperature_Celsius" class="form-control" type="number" placeholder="Enter average temperature" />
                </div>

                <!-- Fertilizer Used -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Fertilizer Used</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Fertilizer_Used" value="true" checked />
                        <label class="form-check-label">Yes</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Fertilizer_Used" value="false" />
                        <label class="form-check-label">No</label>
                    </div>
                </div>

                <!-- Irrigation Used -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Irrigation Used</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Irrigation_Used" value="true" checked />
                        <label class="form-check-label">Yes</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Irrigation_Used" value="false" />
                        <label class="form-check-label">No</label>
                    </div>
                </div>

                <!-- Weather Condition -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Weather Condition</label>
                    <select asp-for="Weather_Condition" class="form-select">
                        <option>Sunny</option>
                        <option>Rainy</option>
                        <option>Cloudy</option>
                    </select>
                </div>

                <!-- Days to Harvest -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Days to Harvest</label>
                    <input asp-for="Days_to_Harvest" class="form-control" type="number" placeholder="Enter number of days" />
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success btn-lg px-4 shadow-sm">
                    Predict Yield
                </button>
            </div>
        </form>
    </div>

    <!-- Prediction Result -->
    @if (ViewBag.Result != null)
    {
        <div class="mt-5 p-4 rounded-4 shadow-lg bg-light text-center">
            <h3 class="fw-bold mb-3">Predicted Yield</h3>
            <p class="fs-3 text-primary fw-bold">@ViewBag.Result</p>
        </div>
    }
</div>
